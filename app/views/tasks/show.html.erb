<h1><%= @task[:title] %></h1>
<%= @task[:details] %>
<br>
<% if @task[:completed] %>
    <input type="checkbox" checked>
    <%= "Completed" %>
  <% else %>
    <input type="checkbox">
    <%= "Completed" %>
<% end %>
<p><%= link_to "Edit", edit_path(@task) %></p>
<p><%= link_to "Back to list", tasks_path %></p>

